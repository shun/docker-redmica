# Redmica
# Maintainer: @sameersbn

upstream redmica {
  server 127.0.0.1:3000 fail_timeout=0;
}

## Normal HTTP host
server {
  listen 0.0.0.0:80 default_server;
  listen [::]:80 default_server;
  server_tokens off;

  ## Increase this if you want to upload large attachments
  client_max_body_size 2g;

  ## Individual nginx logs for this Redmica vhost
  access_log  /var/log/nginx/redmine_access.log;
  error_log   /var/log/nginx/redmine_error.log;

  # Capture file path after relative url. Can't use rewrite since need
  # to pass full path to @redmica proxy.
  location ~* (?<file>.*) {
    ## Serve static files from defined root folder.
    ## @redmica is a named location for the upstream fallback, see below.
    try_files $file @redmica;
  }

  add_header Access-Control-Allow-Origin '*';
  add_header Access-Control-Allow-Methods 'OPTIONS, PUT';
  add_header Access-Control-Allow-Headers 'Content-Type, X-Redmine-API-Key';
  #add_header Access-Control-Allow-Credentials '{{NGINX_CORS_ALLOW_CREDENTIALS}}';
  if ($request_method = 'OPTIONS' ) {
    return 204 no-content;
  }

  ## If a file, which is not found in the root folder is requested,
  ## then the proxy passes the request to the upsteam (redmica puma).
  location @redmica {
    ## If you use HTTPS make sure you disable gzip compression
    ## to be safe against BREACH attack.
    # gzip off;

    ## Some requests take more than 30 seconds.
    proxy_read_timeout      300;
    proxy_connect_timeout   300;
    proxy_redirect          off;
    ## Long issue filters require increasing proxy buffers
    proxy_buffers 8 8k;
    proxy_buffer_size 32k;
    proxy_busy_buffers_size 32k;

    proxy_set_header    Host                $http_host;
    proxy_set_header    X-Real-IP           $remote_addr;
    proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
    proxy_set_header    X-Frame-Options     SAMEORIGIN;

    proxy_pass http://redmica;
  }

  error_page 500 /500.html;
}

